# Server configuration
PORT=8080

# Database configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=weather_label_db
DB_USER=weather_user
DB_PASSWORD=weather_password
DB_PARAMS=parseTime=true&charset=utf8mb4&loc=Local
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5

# File system paths
UPLOAD_DIR=./uploads
STATIC_DIR=./frontend/dist

# Baidu OCR API Configuration
# Get your API key and Secret key from https://cloud.baidu.com/product/ocr
BAIDU_OCR_API_KEY=your_api_key_here
BAIDU_OCR_SECRET_KEY=your_secret_key_here
